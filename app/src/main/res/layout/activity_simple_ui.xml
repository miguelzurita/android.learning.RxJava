<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ReactiveUi.Simple.SimpleUIActivity">

    <TextView
        android:id="@+id/simpleUITitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Title"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/simpleUITitleTextView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/simpleUITitleTextView"
        app:layout_constraintStart_toStartOf="@+id/simpleUITitleTextView"
        app:layout_constraintTop_toBottomOf="@+id/simpleUITitleTextView" />

    <ListView
        android:id="@+id/simpleUIListView"
        android:layout_width="368dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/simpleUIAcceptButton"
        app:layout_constraintEnd_toEndOf="@+id/simpleUITitleTextView2"
        app:layout_constraintStart_toStartOf="@+id/simpleUITitleTextView2"
        app:layout_constraintTop_toBottomOf="@+id/simpleUITitleTextView2" />

    <Button
        android:id="@+id/simpleUIAcceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>